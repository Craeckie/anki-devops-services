version: "3.8"
services:
  djankiserv:
    image: ${DOCKER_IMAGE_ORG}/${DOCKER_IMAGE}
    restart: always
    volumes:
      - ./djankiserv_persistence:/persistence
      - djankiserv-static:/home/app/static

  postgresdb:
    image: postgres
    restart: always
    environment:
      POSTGRES_USER: djankiserv
      POSTGRES_PASSWORD: PLEASE_CHANGE_POSTGRES_PASSWORD
    volumes:
      - ./postgres_persistence:/var/lib/postgresql/data

  nginx_web:
    image: nginx
    restart: always
    volumes:
      - djankiserv-static:/usr/share/nginx/html/static
    ports:
      - 8080:80

volumes:
     djankiserv-static: 


